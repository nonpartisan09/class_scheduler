commands:
    01_makecertbotdir:
        command: "mkdir -p /var/www/certbot"
    02_installcertbot:
        command: "/usr/bin/yum install https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm && /usr/bin/yum-config-manager --enable epel* && /usr/bin/yum install -y certbot && /usr/bin/certbot certificates --debug -n --agree-tos"
files:
    "/etc/cron.d/renew_certs":
        mode: "000644"
        owner: root
        group: root
        content: |
            22 4 */4 * * root /opt/certbot/certbot-auto certonly && sleep 300 && /sbin/service passenger restart
