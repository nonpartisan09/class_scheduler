  <!-- PAGE HEADER
============================== -->
  <%= render :partial=>'partials/page_header', :locals => { page_header: 'Sign Up' } %>

  <div class="container">
    <%= form_for(resource, as: resource_name, url: sign_up_path(:role => @role_url_slug)) do |f| %>
      <%- if @message %>
        <div class="error">
          <%= @message %>
        </div>
      <% end -%>

      <div class="field">
        <%= f.hidden_field :role_ids, { value: [ @role_id ], autofocus: true } %>
      </div>

      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :display_name, autofocus: true, :required => true%>
      </div>

      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, :required => true%>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, :required => true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :required => true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :required => true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :required => true%>
      </div>

      <div class="field">
        <%= f.check_box :terms_and_conditions, { :required => true }, checked_value=1, unchecked_value=0%>
        <span>Please accept our</span>
        <%= link_to "terms and conditions", terms_and_conditions_path, :target => "_blank" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
